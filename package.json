{
  "name": "next-agentic-coding",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port ${APP_PORT:-3000}",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --log-level=error --write .",
    "knip": "knip",
    "format-lint": "npm-run-all -s format lint",
    "quickfix": "npm-run-all -p format-lint typecheck knip",
    "test": "playwright test --project=main",
    "test:build": "TEST_MODE=build playwright test --project=main",
    "screenshots": "playwright test --project=screenshots",
    "yolo": "claude --dangerously-skip-permissions"
  },
  "dependencies": {
    "convex": "^1.25.2",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.44",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.53.2",
    "@tailwindcss/postcss": "^4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "knip": "^5.61.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
